<h1 class="ui center aligned header">Welcome to Message App - a complete Chat App</h1>
<h2 class="ui center aligned icon header">
	<i class="orange circular power off icon"></i>
	Sign Up to continue
</h2>





<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_with model: @user, url: signup_path, class: "ui form" do |f| %>
      <div class="field">
        <label>Username</label>
        <div class="ui left icon input">
          <%= f.text_field :username %>
          <i class="user icon"></i>
        </div>
      </div>
      <div class="field">
        <label>Password</label>
        <div class="ui left icon input">
          <%= f.password_field :password %>
          <i class="lock icon"></i>
        </div>
      </div>
      <%= f.submit "Sign Up", class: "ui orange submit button" %>
      <% end %>
    </div>
    <div class="middle aligned column">
        <%= link_to "Login", login_path, class: "ui orange submit button" %>
        
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>